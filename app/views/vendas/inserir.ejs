<html lang="pt">
<!-- Header de cima -->
<%include ../layouts/header.ejs%>

  <body class="app header-fixed sidebar-fixed aside-menu-fixed sidebar-lg-show">

    <%include ../layouts/header-topo.ejs%>
    
    <div class="app-body">
        <%include ../layouts/menu-lateral.ejs%>
        <!-- side bar -->

      
      <main class="main">
        <!-- Breadcrumb-->
        <ol class="breadcrumb">
          <li class="breadcrumb-item">Home</li>
          <li class="breadcrumb-item">
            <a href="#">Admin</a>
          </li>
          <li class="breadcrumb-item active">Dashboard</li>
          <!-- Breadcrumb Menu-->
          <li class="breadcrumb-menu d-md-down-none">
            <div class="btn-group" role="group" aria-label="Button group">
              <a class="btn" href="#">
                <i class="icon-speech"></i>
              </a>
              <a class="btn" href="./">
                <i class="icon-graph"></i> �Dashboard</a>
              <a class="btn" href="#">
                <i class="icon-settings"></i> �Settings</a>
            </div>
          </li>
        </ol>
        <div class="container-fluid">



          <!--  -->
          <div class="animated fadeIn">
            <div class="row no-row">
              <div class="col-md-12">              
                <div class="row">
                  <div class="col-md-11 div-titulo">
                  <h1 class="titulo-pagina">Vendas</h1><p class="titulo-pagina titulo-pagina-desc"> | Inserir</p> 
                  </div>
                  <div class="col-md-1 pull-right">
                    <a class="btn" href="javascript:history.back()"><i class="fa fa-2x fa-chevron-left"></i></a>
                  </div>
                </div>
                <hr>
                <div class="erros">
                    <% if(errosValidacao){ %>
                      <ul>
                        <%for(var i=0; i< errosValidacao.length; i++){%>
                          <li><%= errosValidacao[i].param%> - <%= errosValidacao[i].msg%></li>
                        <% } %>
                      </ul>
                    <% } %>
                    
                  </div>
                  <form action="/produtos" method="post">
                    <div class="row form-group">
                        <div class="col-md-4">
                            <label for="">Nome do cliente</label>
                            <select class="form-control" name="nome" id="nome">
                            <%for(var i=0; i < clientes.length; i++){%>
                                <option value="<%=clientes[i].id%>"><%=clientes[i].nome%></option>
                            <%}%>  
                            </select>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-5">
                            <input type="checkbox" name="produtos[1][id]" class="produtos" value="1">
                            <h3>Nome do produto</h3>
                        </div>
                        <div class="col-md-3">
                            <input type="number" name="produtos[1][quantidade]" class="form-control produtos">
                        </div>
                        <div class="col-md-3">
                            <p>R$ <span>-</span></p>
                        </div>
                    </div>
                  </form>

              </div>
            </div>
          </div>

        </div> <!--Conteiner fluido -->
      </main>


      <!-- asside -->
      <%include ../layouts/aside.ejs%>

    </div>
    <%include ../layouts/footer.ejs%>
  </body>
</html>