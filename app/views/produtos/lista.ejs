<html lang="en">
<!-- Header de cima -->
<%include ../layouts/header.ejs%>

  <body class="app header-fixed sidebar-fixed aside-menu-fixed sidebar-lg-show">

    <%include ../layouts/header-topo.ejs%>
    
    <div class="app-body">
        <%include ../layouts/menu-lateral.ejs%>
        <!-- side bar -->

      
      <main class="main">
        <!-- Breadcrumb-->
        <ol class="breadcrumb">
          <li class="breadcrumb-item">Home</li>
          <li class="breadcrumb-item">
            <a href="#">Admin</a>
          </li>
          <li class="breadcrumb-item active">Dashboard</li>
          <!-- Breadcrumb Menu-->
          <li class="breadcrumb-menu d-md-down-none">
            <div class="btn-group" role="group" aria-label="Button group">
              <a class="btn" href="#">
                <i class="icon-speech"></i>
              </a>
              <a class="btn" href="./">
                <i class="icon-graph"></i>  Dashboard</a>
              <a class="btn" href="#">
                <i class="icon-settings"></i>  Settings</a>
            </div>
          </li>
        </ol>
        <div class="container-fluid">



          <!--  -->
          <div class="animated fadeIn">
            <div class="row no-row">
              <div class="col-md-12">              
                <div class="row">
                  <div class="col-md-9 div-titulo">
                  <h1 class="titulo-pagina">Produtos</h1><p class="titulo-pagina titulo-pagina-desc"> | Listagem</p> 
                  </div>
                  <div class="col-md-3 pull-right">
                    <a class="btn" href="/produtos/inserir"><i class="fa fa-2x fa-plus-square"></i></a>
                  </div>
                </div>
                <hr>
                <div class="row "> 
                  <!-- <a href="produtos/inserir">Inserir novo produto</a><br>
                  <a href="/">Voltar</a> -->
                  <div class="col-md-12">
                    <table class="table">
                      <tr>
                        <td>Id</td>
                        <td>Nome</td>
                        <td>Preço</td>
                      </tr>
                      <% for(var i=0;i<lista.length;i++){ %>
                      <tr>
                        <td><%=lista[i].id%></td>
                        <td><%=lista[i].nome%></td>
                        <td><%=lista[i].preco%></td>
                      </tr>
                      <% } %>
                    </table>
  
                  </div>
                </div>
    
              </div>
            </div>
          </div>

        </div> <!--Conteiner fluido -->
      </main>


      <!-- asside -->
      <%include ../layouts/aside.ejs%>

    </div>
    <%include ../layouts/footer.ejs%>
  </body>
</html>