<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <title>Cadastrar produto</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" type="text/css" media="screen" href="main.css" />
  <script src="main.js"></script>
</head>
<body>
  <div class="erros">
    <% if(errosValidacao){ %>
      <ul>
        <%for(var i=0; i< errosValidacao.length; i++){%>
          <li><%= errosValidacao[i].param%> - <%= errosValidacao[i].msg%></li>
        <% } %>
      </ul>
    <% } %>
    
  </div>
  <form action="/produtos/inserir" method="post">
    <div class="col-md-4">
      <label for="">Nome do produto</label>
      <input type="text" name="nome" placeholder="Digite o nome do produto" value="<%=produtoInfo.nome%>">
    </div>
    <div class="col-md-4">
      <label for="">Preço do produto</label>
      <input type="text" name="preco" placeholder="Digite o preço do produto" value="<%=produtoInfo.preco%>">
    </div>
    <div class="col-md-4">
      <label for="">Descrição do produto</label>
      <textarea name="descricao" cols="30" rows="10"><%=produtoInfo.descricao%></textarea>
    </div>
    <input type="submit" value="gravar">
  </form>
</body>
</html>